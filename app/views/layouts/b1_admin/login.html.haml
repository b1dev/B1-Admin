  %body
    #container.cls-container
      / BACKGROUND IMAGE
      / ===================================================
      #bg-overlay.bg-img.img-balloon
      / HEADER
      / ===================================================
      .cls-header.cls-header-lg
        .cls-brand
          %a.box-inline{:href => "index.html"}
            / <img alt="Nifty Admin" src="img/logo.png" class="brand-icon">
            %span.brand-title
              Nifty
              %span.text-thin Admin
      / ===================================================
      / LOGIN FORM
      / ===================================================
      .cls-content
        .cls-content-sm.panel
          .panel-body
            %p.pad-btm Sign In to your account
            %form{:action => "index.html"}
              .form-group
                .input-group
                  .input-group-addon
                    %i.fa.fa-user
                  %input.form-control{:placeholder => "Username", :type => "text"}
              .form-group
                .input-group
                  .input-group-addon
                    %i.fa.fa-asterisk
                  %input.form-control{:placeholder => "Password", :type => "password"}
              .row
                .col-xs-8.text-left.checkbox
                  %label.form-checkbox.form-icon
                    %input{:type => "checkbox"}
                      Remember me
                .col-xs-4
                  .form-group.text-right
                    %button.btn.btn-success.text-uppercase{:type => "submit"} Sign In
              .mar-btm
                %em - or -
              %button.btn.btn-primary.btn-lg.btn-block{:type => "button"}
                %i.fa.fa-facebook.fa-fw
                Login with Facebook
        .pad-ver
          %a.btn-link.mar-rgt{:href => "pages-password-reminder.html"} Forgot password ?
          %a.btn-link.mar-lft{:href => "pages-register.html"} Create a new account
      / ===================================================
      / DEMO PURPOSE ONLY
      / ===================================================
      .demo-bg
        #demo-bg-list
          .demo-loading
            %i.fa.fa-refresh
          %img.demo-chg-bg.bg-trans{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-trns.jpg"}
            %img.demo-chg-bg{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-1.jpg"}
              %img.demo-chg-bg.active{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-2.jpg"}
                %img.demo-chg-bg{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-3.jpg"}
                  %img.demo-chg-bg{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-4.jpg"}
                    %img.demo-chg-bg{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-5.jpg"}
                      %img.demo-chg-bg{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-6.jpg"}
                        %img.demo-chg-bg{:alt => "Background Image", :src => "img/bg-img/thumbs/bg-img-7.jpg"}
      / ===================================================
    / ===================================================
    / END OF CONTAINER
    / JAVASCRIPT
    / =================================================
    / jQuery [ REQUIRED ]
    %script{:src => "js/jquery-2.1.1.min.js"}
    / BootstrapJS [ RECOMMENDED ]
    %script{:src => "js/bootstrap.min.js"}
    / Plugins [ OPTIONAL ]
    %script{:src => "js/plugins.min.js"}
    / Background Image [ DEMONSTRATION ]
